{
    "version": "2.0.0",
    // List of configurations. Add new configurations or edit existing ones.
    "configurations": [{
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "client/test/test.kao",
            "grammar": "server/src/YmlToBdl.g4",
            "startRule": "kaoFile",
            "printParseTree": true,
            "visualParseTree": true
        },

        {
            "name": "Launch Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/client"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/client/out/**/*.js"
            ],
            "preLaunchTask": "compile:client"
        },
        {
            "name": "Attach to Server",
            "type": "node",
            "request": "attach",
            "port": 6009,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/client/server/**/*.js"
            ],
            "preLaunchTask": "watch:server"
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/client",
                "--extensionTestsPath=${workspaceRoot}/client/out/test"
            ],
            "outFiles": [
                "${workspaceRoot}/client/out/test/**/*.js"
            ],
            "preLaunchTask": "watch:client"
        }
    ]
}
