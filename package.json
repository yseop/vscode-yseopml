{
    "name": "vscode-yseopml",
    "displayName": "YML (Yseop Markup Language) support extension",
    "description": "Implementation of YML language server in node.",
    "version": "1.5.0",
    "author": "Yseop",
    "license": "MIT",
    "publisher": "Yseop",
    "repository": {
        "type": "git",
        "url": "https://github.com/yseop/vscode-yseopml"
    },
    "bugs": {
        "url": "https://github.com/yseop/vscode-yseopml/issues"
    },
    "engines": {
        "vscode": "^1.28.2"
    },
    "scripts": {
        "antlr4ts": "cd server && npm run antlr4ts",
        "compile": "npm run compile:server && npm run compile:client",
        "compile:client": "cd client && npm run compile",
        "compile:server": "cd server && npm run compile",
        "lint": "tslint -c tslint.json --project tsconfig.json '**/src/*.ts'",
        "lint:report": "tslint --project tsconfig.json --force --fix -c tslint.json -o report.json -t json '**/src/*.ts'",
        "package": "npm install --unsafe-perm && npm run compile && npm run test && cd client && vsce package",
        "postinstall": "cd server && npm install --unsafe-perm && cd ../client && npm install --unsafe-perm",
        "test": "npm run test:client && npm run test:server-ci",
        "test:client": "cd client && npm run test",
        "test:server": "cd server && npm run test",
        "test:server-ci": "cd server && npm run test:ci",
        "watch:client": "cd client && npm run watch",
        "watch:server": "cd server && npm run watch"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.11.5",
        "antlr4ts-cli": "^0.5.0-alpha.3",
        "mocha": "^5.2.0",
        "ts-loader": "^5.3.3",
        "tslint-config-prettier": "^1.18.0",
        "tslint-consistent-codestyle": "^1.15.1",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-sonarts": "^1.9.0",
        "typescript": "^3.3.4000",
        "vsce": "^1.58.0",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    },
    "dependencies": {
        "@types/xml2js": "^0.4.3",
        "tslint": "^5.14.0"
    }
}
