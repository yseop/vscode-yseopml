{
    "name": "vscode-yseopml-server",
    "displayName": "YML (Yseop Markup Language) support extension",
    "description": "Implementation of YML language server in node.",
    "version": "1.6.2",
    "private": true,
    "author": "Yseop",
    "publisher": "Yseop",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yseop/vscode-yseopml"
    },
    "engines": {
        "node": "*"
    },
    "dependencies": {
        "@types/xml2js": "^0.4.4",
        "xml2js": "^0.4.19",
        "antlr4ts": "^0.5.0-alpha.3",
        "antlr4ts-cli": "^0.5.0-alpha.3",
        "vscode-uri": "^1.0.6",
        "vscode-languageserver": "5.3.0-next.7"
    },
    "scripts": {
        "antlr4ts": "antlr4ts -visitor -o src grammar/YmlLexer.g4 && antlr4ts -visitor -lib src/grammar/ -o src grammar/YmlParser.g4",
        "test": "tsc -b ./tsconfig.json && cd ./out && mocha --recursive",
        "test:ci": "tsc -b ./tsconfig.json && cd ./out && mocha --reporter xunit --reporter-options output=../../target/test-reports/server-tests.xml --recursive"
    }
}
