{
   "comments": {
       "lineComment": "//",
       "blockComment": [ "/*", "*/" ]
   },
   "brackets": [
       ["{", "}"],
       ["[", "]"],
       ["\\(", "\\)"],
       ["<", ">"]
   ],
   "autoClosingPairs": [
       { "open": "{", "close": "}" },
       { "open": "[", "close": "]" },
       { "open": "\\(", "close": "\\)" },
       { "open": "\\if", "close": "\n\\endIf" },
       { "open": "'", "close": "'", "notIn": ["string", "comment"] },
       { "open": "\"", "close": "\"", "notIn": ["string"] },
       { "open": "`", "close": "`", "notIn": ["string", "comment"] },
       { "open": "/**", "close": " */", "notIn": ["string"] }
   ],
   "surroundingPairs": [
       ["{", "}"],
       ["[", "]"],
       ["(", ")"],
       ["<", ">"],
       ["'", "'"],
       ["\"", "\""],
       ["`", "`"],
       ["\\(", "\\)"]
   ]
}